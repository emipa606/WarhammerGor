    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <requiredWorkTags>
      <li>Violent</li>
      <li>Artistic</li>
    </requiredWorkTags>
  </AlienRace.AlienBackstoryDef>
