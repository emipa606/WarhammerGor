<Defs>
  <!-- Extra Horn Variant for Gor -->
  <!-- Adulthood -->
  <AlienRace.AlienBackstoryDef>
    <defName>GorTurnedRunt</defName>
    <title>mutant</title>
    <titleShort>turned</titleShort>
    <baseDesc>[PAWN_nameDef] was turned by chaos.</baseDesc>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <key>Melee</key>
        <value>3</value>
      </li>
      <li>
        <key>Shooting</key>
        <value>3</value>
      </li>
    </skillGains>
    <spawnCategories>
      <li>GorRunt</li>
    </spawnCategories>
    <forcedTraitsChance>
      <li>
        <defName>Bloodlust</defName>
        <chance>25</chance>
        <commonalityMale>100</commonalityMale>
        <commonalityFemale>10</commonalityFemale>
      </li>
      <li>
        <defName>Psychopath</defName>
        <chance>5</chance>
      </li>
    </forcedTraitsChance>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
