  <!-- Childhood -->
  <AlienRace.AlienBackstoryDef>
    <defName>GorWildRunt</defName>
    <title>wildling</title>
    <titleShort>wild</titleShort>
    <baseDesc>[PAWN_nameDef] was born as a gor to a human family. Left in the wilds like so many other mutant children then picked up by a nearby gor herd that heard the mutant child calling.</baseDesc>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Childhood</slot>
